{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Standalone Config Editor",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "preLaunchTask": "Start Dev Server"
    },
    {
      "name": "Run VS Code Config Editor",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/yaml-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}/integrations/vscode/extension"
      ],
      "outFiles": ["${workspaceRoot}/integrations/vscode/extension/out/**/*.js"],
      "sourceMaps": true,
      "preLaunchTask": "yarn: build"
    }
  ]
}
